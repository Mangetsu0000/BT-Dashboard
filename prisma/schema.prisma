generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash String

  firstName  String?
  lastName String?

  branches Branch[]

  @@map("users")
}

model Branch{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  bc Int
  ttIpAddress String
  orangeIpAddress String


  userId Int
  user   User @relation(fields: [userId], references: [id])
  @@map("branches")

}